{
  "name": "poc",
  "version": "0.1.0",
  "private": true,
  "main": "src/electron.js",
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "sequelize": "^6.4.0",
    "sqlite3": "^5.0.1",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "dist": "electron-builder -c.extraMetadata.main=build/electron.js",
    "start": "set ELECTRON_START_URL = http://localhost:3000 && nf start -p 3000",
    "electron-start": "node src/wait-for-react",
    "react-start": "react-scripts start",
    "postinstall": "electron-builder install-app-deps"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^11.2.0",
    "electron-builder": "^22.9.1",
    "foreman": "^3.0.1"
  },
  "build": {
    "productName": "Asset Tracking Center",
    "copyright": "Â© 2020 Baker Hughes Company",
    "compression": "maximum",
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "publish": [
      {
        "provider": "generic",
        "url": "http://localhost/"
      }
    ]
  }
}
